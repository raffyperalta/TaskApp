generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  tasks    Task[]
  roleId   Int
}

model Task {
  id        Int    @id @default(autoincrement())
  title     String
  description String
  completed Boolean @default(false)
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
}
